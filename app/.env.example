# ==========================================
# AI-Human Inventory Game Configuration
# ==========================================
# Copy this file to .env and fill in your values

# ==========================================
# Storage Mode (Required)
# ==========================================
# Set to true for local JSON file storage (recommended for getting started)
# Set to false or omit to use Supabase
USE_LOCAL_STORAGE=true

# ==========================================
# OpenAI Configuration (Required for all modes)
# ==========================================
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini

# ==========================================
# Supabase Configuration (Required only if USE_LOCAL_STORAGE=false)
# ==========================================
# SUPABASE_URL=https://your-project.supabase.co
# SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
# SUPABASE_ANON_KEY=your-anon-key

# ==========================================
# Server Configuration (Optional)
# ==========================================
# Port to run the server on (default: 8000)
PORT=8000

# Host to bind to (default: 0.0.0.0)
HOST=0.0.0.0

# Enable auto-reload in development (default: 1)
FULLSTACK_DEMO_RELOAD=1

# ==========================================
# Application Settings (Optional)
# ==========================================
# Path to demand data CSV (relative to project root)
# DEMAND_DATA_PATH=examples/initial_synthetic_demand_files/demand.csv

# Debug logging (default: false)
# DEBUG=false
